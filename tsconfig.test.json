{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Solo type-check dei test; mantenere composite per integration col project graph
    "noEmit": true,
    "composite": true,
    // Evita richieste di output già buildato; il language service userà i sorgenti della ref
    "disableSourceOfProjectReferenceRedirect": false,
    "lib": [
      "ES2023"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowImportingTsExtensions": true,
    // Manteniamo skipLibCheck per velocità (rimuovi se vuoi massima strictness)
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "./test/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "**/*.d.ts.map"
  ],
  "references": [
    {
      "path": "./tsconfig.src.json"
    }
  ]
}