{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    // Only type-check tests; keep composite for integration with the project graph
    "noEmit": true,
    "composite": true,
    // Avoid requests for already built output; the language service will use the sources from the referenced project
    "disableSourceOfProjectReferenceRedirect": false,
    "lib": [
      "ES2023"
    ],
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowImportingTsExtensions": true,
    // Keep skipLibCheck for speed (remove it if you want maximum strictness)
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  },
  "include": [
    "./test/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "node_modules",
    "**/*.d.ts.map"
  ],
  "references": [
    {
      "path": "./tsconfig.src.json"
    }
  ]
}